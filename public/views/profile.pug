extends ./layout.pug

block content
  h2 Profile Picture:
  img#tempPic(src='/img/cutesprays/' + user.profilePic, style="width:100px;height:100px")
  form(action='/user/updatepic', method='post', encType='multipart/form-data')
    .form-group
      label.col-md-3.control-label(for='pic') Profile Picture
      div.col-md-9
        input.form-control#profilePic(name='pic', type='text', readonly, style='display:inline;width:75%;float:left')
        button.btn.btn-fab.btn-fab-mini(type='button', style='float:left', data-toggle="modal" data-target="#picPicker")
          i.material-icons plus
    .form-group
      .col-md-10
        button.btn.btn-primary(type='submit') Submit
  include ./picSelector.pug
