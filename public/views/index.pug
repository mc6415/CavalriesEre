extends ./layout.pug

block header
  meta(author='Michael Coombes')

block content
  if !loggedIn
    include ./register.pug
    include ./login.pug
  else if loggedIn
    include ./welcome.pug
  //- h2 Welcome #{user.firstName}!
  if !loggedIn
    script.
      $('#showRegister').click(function(){
            $('#registrationForm').fadeIn();
            $('#loginForm').fadeOut();
      })
      $('#showLogin').click(function(){
        $('#loginForm').fadeIn();
        $('#registrationForm').fadeOut();
      })
